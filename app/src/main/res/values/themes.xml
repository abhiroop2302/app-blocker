<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/app_color</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/app_color</item>

        <item name="android:windowContentOverlay">@color/app_color</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>


    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
    <style name="TutorialLargeTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_28ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="TutorialMidTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="TutorialSmallTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="WeekDays">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
</resources>
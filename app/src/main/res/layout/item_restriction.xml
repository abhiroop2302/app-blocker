<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:strokeColor="#40000000"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    android:layout_marginVertical="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_15sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPermissionIcon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_nav_hour_glass_unselected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvRestrictionTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvRestrictionDesc"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEnable"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="@dimen/_2sdp"
            android:visibility="gone"
            android:src="@drawable/ic_settings_dark"
            app:layout_constraintEnd_toStartOf="@id/tvEnable"
            app:layout_constraintTop_toTopOf="@id/tvEnable"
            app:layout_constraintBottom_toBottomOf="@id/tvEnable"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enable"
            android:textColor="@color/app_color"
            android:paddingTop="@dimen/_2sdp"
            android:textSize="@dimen/_9ssp"
            android:visibility="gone"
            android:fontFamily="@font/poppins_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvRestrictionTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvRestrictionDesc"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRestrictionTitle"
            style="@style/TutorialMidTitle"
            android:text="@string/dummy_permission_name"
            android:textColor="@color/black"
            android:gravity="start"
            android:paddingStart="0dp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:paddingEnd="0dp"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPermissionIcon"
            app:layout_constraintEnd_toStartOf="@id/ivMore"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRestrictionDesc"
            style="@style/TutorialSmallTitle"
            android:text="@string/dummy_notification_permission_desc"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:alpha="0.5"
            android:textSize="@dimen/_8ssp"
            android:gravity="start"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvRestrictionTitle"
            app:layout_constraintStart_toStartOf="@id/tvRestrictionTitle"
            app:layout_constraintEnd_toEndOf="@id/tvRestrictionTitle"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            app:layout_constraintTop_toTopOf="@id/tvRestrictionTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvRestrictionDesc"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvHourly"
            style="@style/TutorialMidTitle"
            android:text="@string/hourly"
            android:textColor="@color/black"
            android:background="@drawable/bg_hourly_view_selected"
            android:layout_width="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="@id/tvRestrictionDesc"
            app:layout_constraintTop_toBottomOf="@id/tvRestrictionDesc"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDaily"
            style="@style/TutorialMidTitle"
            android:text="@string/daily"
            android:background="@drawable/bg_daily_view_unselected"
            android:textColor="@color/black"
            android:layout_width="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintStart_toEndOf="@id/tvHourly"
            app:layout_constraintTop_toBottomOf="@id/tvRestrictionDesc"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
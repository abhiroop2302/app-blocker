<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAppIcon"
        android:src="@drawable/ic_dummy_app_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvAppName"
        style="@style/TutorialMidTitle"
        android:text="@string/dummy_app_name"
        android:textColor="@color/black"
        android:gravity="start"
        android:singleLine="true"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="@id/ivAppIcon"
        app:layout_constraintStart_toEndOf="@id/ivAppIcon"
        app:layout_constraintEnd_toStartOf="@id/ivExplore"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvUsageTime"
        style="@style/TutorialSmallTitle"
        android:text="@string/dummy_time"
        android:textColor="@color/black"
        android:gravity="start"
        android:paddingStart="0dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@id/ivAppIcon"
        app:layout_constraintEnd_toStartOf="@id/ivExplore"/>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progress="50"
        app:indicatorColor="@color/black"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="@id/tvUsageTime"
        app:layout_constraintBottom_toBottomOf="@id/tvUsageTime"
        app:layout_constraintStart_toStartOf="@id/tvAppName"
        app:layout_constraintEnd_toStartOf="@id/tvUsageTime"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivExplore"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
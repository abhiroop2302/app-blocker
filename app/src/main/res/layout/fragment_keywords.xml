<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".screen.add_block_section.KeywordsFragment">

<com.google.android.material.textview.MaterialTextView
    android:id="@+id/tvKeyword"
    style="@style/TutorialMidTitle"
    android:text="@string/keyword_list_title_1"
    android:textColor="#80000000"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:gravity="start"
    android:paddingStart="0dp"
    android:paddingEnd="@dimen/_10sdp"
    android:fontFamily="@font/poppins_semibold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>



<LinearLayout
    android:id="@+id/llSearch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_15sdp"
    android:background="@drawable/bg_new_block_name"
    app:layout_constraintTop_toBottomOf="@id/tvKeyword">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSearch"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="match_parent"
        android:src="@drawable/ic_search_dark"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etSearch"
        style="@style/TutorialMidTitle"
        android:layout_weight="0.9"
        android:gravity="start"
        android:paddingStart="0dp"
        android:singleLine="true"
        android:paddingEnd="0dp"
        android:fontFamily="@font/poppins_semibold"
        android:background="@android:color/transparent"
        android:hint="@string/keyword_fragment_title_1"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMore"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="match_parent"
        android:src="@drawable/ic_more"/>
</LinearLayout>

<View
    android:id="@+id/vDivider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="@dimen/_15sdp"
    android:background="@color/black"
    android:alpha="0.2"
    app:layout_constraintTop_toBottomOf="@id/llSearch"/>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rlKeyword"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    tools:itemCount="45"
    tools:listitem="@layout/item_keyword"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginVertical="@dimen/_15sdp"
    app:layout_constraintTop_toBottomOf="@id/vDivider"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
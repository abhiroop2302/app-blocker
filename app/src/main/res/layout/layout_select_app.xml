<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <include
        android:id="@+id/appNavBar"
        layout="@layout/apps_nav_bar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDone"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_done"
        android:paddingHorizontal="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="@id/appNavBar"
        app:layout_constraintBottom_toBottomOf="@id/appNavBar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/vNavBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.25"
        app:layout_constraintTop_toBottomOf="@id/appNavBar"/>

   <androidx.fragment.app.FragmentContainerView
       android:id="@+id/appsFragmentContainer"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/vNavBar"
       app:layout_constraintBottom_toBottomOf="parent"
       tools:layout="@layout/fragment_apps"
       android:name="com.example.myapplication.screen.add_block_section.AppsFragment"/>



</androidx.constraintlayout.widget.ConstraintLayout>
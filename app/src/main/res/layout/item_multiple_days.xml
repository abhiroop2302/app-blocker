<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="@dimen/_20sdp"
    app:strokeColor="#40000000"
    app:strokeWidth="1dp"
    android:background="@drawable/bg_item_multiple_days">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSunday"
        style="@style/TutorialSmallTitle"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/sunday_symbol"
        android:textColor="@color/black"
        android:background="@drawable/bg_multiple_days_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvMonday"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vOne"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:elevation="1dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@id/tvSunday"
        app:layout_constraintStart_toEndOf="@id/tvSunday"
        app:layout_constraintTop_toTopOf="@id/tvSunday" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvMonday"
        style="@style/TutorialSmallTitle"
        android:layout_width="wrap_content"
        android:background="@color/tutorial_color"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/monday_symbol"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvTuesday"
        app:layout_constraintStart_toEndOf="@id/tvSunday"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vTwo"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:elevation="1dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@id/tvSunday"
        app:layout_constraintStart_toEndOf="@id/tvMonday"
        app:layout_constraintTop_toTopOf="@id/tvSunday" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTuesday"
        style="@style/TutorialSmallTitle"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/tuesday_symbol"
        android:textColor="@color/black"
        android:background="@color/tutorial_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvWednesday"
        app:layout_constraintStart_toEndOf="@id/tvMonday"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vThree"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:elevation="1dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@id/tvSunday"
        app:layout_constraintStart_toEndOf="@id/tvTuesday"
        app:layout_constraintTop_toTopOf="@id/tvSunday" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWednesday"
        style="@style/TutorialSmallTitle"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/wednesday_symbol"
        android:textColor="@color/black"
        android:background="@color/tutorial_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvThursday"
        app:layout_constraintStart_toEndOf="@id/tvTuesday"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tvFour"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:elevation="1dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@id/tvSunday"
        app:layout_constraintStart_toEndOf="@id/tvWednesday"
        app:layout_constraintTop_toTopOf="@id/tvSunday" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvThursday"
        style="@style/TutorialSmallTitle"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/thursday_symbol"
        android:textColor="@color/black"
        android:background="@color/tutorial_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvFriday"
        app:layout_constraintStart_toEndOf="@id/tvWednesday"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vFive"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:elevation="1dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@id/tvSunday"
        app:layout_constraintStart_toEndOf="@id/tvThursday"
        app:layout_constraintTop_toTopOf="@id/tvSunday" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvFriday"
        style="@style/TutorialSmallTitle"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/friday_symbol"
        android:textColor="@color/black"
        android:background="@color/tutorial_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvSaturday"
        app:layout_constraintStart_toEndOf="@id/tvThursday"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vSix"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:elevation="1dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@id/tvSunday"
        app:layout_constraintStart_toEndOf="@id/tvFriday"
        app:layout_constraintTop_toTopOf="@id/tvSunday" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSaturday"
        style="@style/TutorialSmallTitle"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/saturday_symbol"
        android:textColor="@color/black"
        android:background="@drawable/bg_multiple_days_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvFriday"
        app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
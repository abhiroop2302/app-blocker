<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".screen.settings_section.SettingsActivity">

    <include
        android:id="@+id/appBar"
        layout="@layout/blocked_notification_app_bar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_20sdp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTroubleShoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTroubleShooting"
                    style="@style/SettingTextView"
                    android:text="@string/troubleshooting"
                    android:textColor="@color/black"
                    android:alpha="0.5"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMiuiPermission"
                    style="@style/SettingTextView"
                    android:text="@string/miui_permission"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTroubleShooting"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvServiceAlive"
                    style="@style/SettingTextView"
                    android:text="@string/foreground_service_alive"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toStartOf="@id/serviceAliveSwitch"
                    app:layout_constraintTop_toBottomOf="@id/tvMiuiPermission"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/serviceAliveSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvServiceAlive"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAppNotWorking"
                    style="@style/SettingTextView"
                    android:text="@string/app_not_working"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvServiceAlive"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvBugReport"
                    style="@style/SettingTextView"
                    android:text="@string/report_bug"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAppNotWorking"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/vTroubleShoot"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha="0.2"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/clTroubleShoot"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clStrictBlocking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/vTroubleShoot">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvStrictBlock"
                    style="@style/SettingTextView"
                    android:text="@string/strict_block"
                    android:textColor="@color/black"
                    android:alpha="0.5"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvReboot"
                    style="@style/SettingTextView"
                    android:text="@string/device_reboot"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toStartOf="@id/rebootSwitch"
                    app:layout_constraintTop_toBottomOf="@id/tvStrictBlock"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPreventUninstall"
                    style="@style/SettingTextView"
                    android:text="@string/prevent_uninstall"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvReboot"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/rebootSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvReboot"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPauseDelay"
                    style="@style/SettingTextView"
                    android:text="@string/pause_delay"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPreventUninstall"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/vStrictBlocking"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha="0.2"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/clStrictBlocking"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/vStrictBlocking">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvEnablePinCode"
                    style="@style/SettingTextView"
                    android:text="@string/pin_code_setup"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPinCode"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPinCode"
                    style="@style/SettingTextView"
                    android:text="@string/title_pin_code"
                    android:textColor="@color/black"
                    android:alpha="0.5"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvSetPin"
                    style="@style/SettingTextView"
                    android:text="@string/set_pin"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvEnablePinCode"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchPinCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tvEnablePinCode"
                    app:layout_constraintTop_toTopOf="@id/tvEnablePinCode"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/vPinCode"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha="0.2"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/clPincode"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/vPinCode">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvWeek"
                    style="@style/SettingTextView"
                    android:text="@string/start_week"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTime"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTime"
                    style="@style/SettingTextView"
                    android:text="@string/time"
                    android:textColor="@color/black"
                    android:alpha="0.5"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDay"
                    style="@style/SettingTextView"
                    android:text="@string/dummy_day"
                    android:textColor="@color/black"
                    android:alpha="0.5"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvWeek"
                    app:layout_constraintStart_toStartOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/vTime"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha="0.2"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/clTime"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clQuotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/vTime">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvShowQuote"
                    style="@style/SettingTextView"
                    android:text="@string/show_quote"
                    android:textColor="#80000000"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toStartOf="@id/switchQuote"
                    app:layout_constraintTop_toBottomOf="@id/tvQuote"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvQuote"
                    style="@style/SettingTextView"
                    android:text="@string/quotes"
                    android:textColor="@color/black"
                    android:alpha="0.5"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCustomQuote"
                    style="@style/SettingTextView"
                    android:text="@string/custom_quote"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvShowQuote"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchQuote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvShowQuote"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/vQuote"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha="0.2"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/clQuotes"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/vQuote">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvNotifications"
                    style="@style/SettingTextView"
                    android:text="@string/notification"
                    android:textColor="@color/black"
                    android:alpha="0.5"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvUsageReport"
                    style="@style/SettingTextView"
                    android:text="@string/usage_report"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toStartOf="@id/switchUsageReport"
                    app:layout_constraintTop_toBottomOf="@id/tvNotifications"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvReminders"
                    style="@style/SettingTextView"
                    android:text="@string/reminders"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvUsageReport"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchUsageReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvUsageReport"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvBlockedNotifications"
                    style="@style/SettingTextView"
                    android:text="@string/blocked_notification_info_text"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvReminders"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/vNotifications"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha="0.2"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/clNotification"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/vNotifications">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvLanguage"
                    style="@style/SettingTextView"
                    android:text="@string/language"
                    android:textColor="@color/black"
                    android:alpha="0.5"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvChangeLanguage"
                    style="@style/SettingTextView"
                    android:text="@string/change_language"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvLanguage"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTranslate"
                    style="@style/SettingTextView"
                    android:text="@string/translate_help"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvChangeLanguage"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/vLanguage"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha="0.2"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/clLanguage"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/vLanguage">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvOther"
                    style="@style/SettingTextView"
                    android:text="@string/other"
                    android:textColor="@color/black"
                    android:alpha="0.5"
                    android:gravity="start"
                    android:fontFamily="@font/poppins_semibold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvHiddenUsage"
                    style="@style/SettingTextView"
                    android:text="@string/hidden_usage"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvOther"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvExportData"
                    style="@style/SettingTextView"
                    android:text="@string/export"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHiddenUsage"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTheme"
                    style="@style/SettingTextView"
                    android:text="@string/theme"
                    android:textColor="#80000000"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvExportData"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAbout"
                    style="@style/SettingTextView"
                    android:text="@string/about"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvTheme"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvShare"
                    style="@style/SettingTextView"
                    android:text="@string/share"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAbout"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
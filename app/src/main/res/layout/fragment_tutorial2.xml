<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutorials.TutorialFragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="@dimen/_55sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitle"
            style="@style/TutorialLargeTitle"
            android:gravity="center"
            android:text="@string/tutorial_2_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvNoMoreApps"
                style="@style/TutorialMidTitle"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/tutorial_2_sub_title"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/ivAppsToBlock"
                layout="@layout/item_app_to_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@id/tvNoMoreApps"
                app:layout_constraintEnd_toEndOf="@id/tvNoMoreApps"
                app:layout_constraintTop_toBottomOf="@id/tvNoMoreApps"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clApps"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/clBlock">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTime"
                style="@style/TutorialMidTitle"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="@string/tutorial_2_sub_title_1"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <include
                android:id="@+id/ivTime"
                layout="@layout/item_time_to_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="@id/tvTime"
                app:layout_constraintEnd_toEndOf="@id/tvTime"
                app:layout_constraintTop_toBottomOf="@id/tvTime"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clUsage"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/clApps">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvUsage"
                style="@style/TutorialMidTitle"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="@string/tutorial_2_sub_title_2"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivHourGlass"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_hourglass"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/bg_light_tutorial"
                app:layout_constraintTop_toBottomOf="@id/tvUsage"
                app:layout_constraintStart_toStartOf="@id/tvUsage"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDummyTime"
                style="@style/TutorialSmallTitle"
                android:text="@string/tutorial_2_sub_title_3"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/ivHourGlass"
                app:layout_constraintEnd_toStartOf="@id/ivAppIcon"
                app:layout_constraintTop_toTopOf="@id/ivHourGlass"
                app:layout_constraintBottom_toBottomOf="@id/ivHourGlass"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivAppIcon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_splash_icon"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/bg_light_tutorial"
                app:layout_constraintTop_toBottomOf="@id/tvUsage"
                app:layout_constraintEnd_toEndOf="@id/tvUsage"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNoDistraction"
            style="@style/TutorialMidTitle"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="@string/tutorial_2_sub_title_4"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clUsage"/>

        <LinearLayout
            android:id="@+id/llBlocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="invisible"
            android:background="@drawable/bg_light_tutorial"
            app:layout_constraintEnd_toEndOf="@id/tvNoDistraction"
            app:layout_constraintTop_toBottomOf="@id/tvNoDistraction"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                style="@style/WeekDays"
                android:layout_width="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                android:textColor="@color/black"
                android:text="@string/tutorial_2_sub_title_5"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="visible" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_10sdp"
                android:background="@color/white"
                android:src="@drawable/ic_splash_icon"
                />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPinch"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:visibility="invisible"
            android:background="@drawable/bg_light_tutorial"
            app:layout_constraintStart_toStartOf="@id/tvNoDistraction"
            app:layout_constraintTop_toTopOf="@id/llBlocked"
            app:layout_constraintBottom_toBottomOf="@id/llBlocked"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPinchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pinch"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@id/ivPinch"
            app:layout_constraintStart_toStartOf="@id/ivPinch"
            app:layout_constraintEnd_toEndOf="@id/ivPinch"
            app:layout_constraintBottom_toBottomOf="@id/ivPinch"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvApps"
        style="@style/TutorialSmallTitle"
        android:layout_width="wrap_content"
        android:text="@string/app_nav_bar_title_1"
        android:textColor="@color/app_color"
        app:drawableTopCompat="@drawable/ic_menu_light"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvWebsite"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWebsite"
        style="@style/TutorialSmallTitle"
        android:layout_width="wrap_content"
        android:text="@string/app_nav_bar_title_2"
        android:paddingVertical="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:drawableTopCompat="@drawable/ic_website_unselected"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvApps"
        app:layout_constraintEnd_toStartOf="@id/tvKeywords"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvKeywords"
        style="@style/TutorialSmallTitle"
        android:layout_width="wrap_content"
        android:text="@string/app_nav_bar_title_3"
        android:textColor="@color/black"
        app:drawableTopCompat="@drawable/ic_keyword_unselected"
        android:drawablePadding="@dimen/_5sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvWebsite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/vDivider"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_app_nav_bar_selected_tab"
        android:layout_marginHorizontal="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvApps"
        app:layout_constraintEnd_toEndOf="@id/tvApps"/>

</androidx.constraintlayout.widget.ConstraintLayout>
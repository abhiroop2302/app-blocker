<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_20sdp"
    android:layout_margin="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_saving_time_dialog">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle"
        style="@style/TutorialMidTitle"
        android:text="@string/set_usage_limit"
        android:textColor="@color/black"
        android:gravity="start"
        android:textSize="@dimen/_18ssp"
        android:background="@drawable/bg_saving_time_title"
        android:paddingVertical="@dimen/_12sdp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSubTitle"
        style="@style/TutorialMidTitle"
        android:text="@string/usage_per_hour"
        android:gravity="start"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTimeSelected"
        style="@style/TutorialMidTitle"
        android:text="@string/dummy_hourly_time_selected"
        android:gravity="start"
        android:textColor="@color/app_color"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:drawableStartCompat="@drawable/ic_nav_hour_glass_unselected"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvStartTime"
        style="@style/TutorialMidTitle"
        android:layout_width="wrap_content"
        android:text="@string/dummy_start_hourly_time"
        android:gravity="start"
        android:textColor="@color/app_color"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@id/tvTimeSelected"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvEndTime"
        style="@style/TutorialMidTitle"
        android:layout_width="wrap_content"
        android:text="@string/dummy_start_hourly_time_1"
        android:gravity="start"
        android:textColor="@color/app_color"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@id/tvTimeSelected"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:progress="5"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:progressTint="@color/tutorial_color"
        android:min="0"
        android:max="59"
        android:splitTrack="false"
        app:layout_constraintTop_toTopOf="@id/tvStartTime"
        app:layout_constraintBottom_toBottomOf="@id/tvStartTime"
        app:layout_constraintStart_toEndOf="@id/tvStartTime"
        app:layout_constraintEnd_toStartOf="@id/tvEndTime"/>

    <include
        android:id="@+id/iCustomTime"
        layout="@layout/item_custom_time_setter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="@id/tvStartTime"
        app:layout_constraintEnd_toEndOf="@id/tvEndTime"
        app:layout_constraintTop_toBottomOf="@id/tvStartTime"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCancel"
        style="@style/TutorialMidTitle"
        android:layout_width="wrap_content"
        android:text="@string/cancel"
        android:textColor="@color/tutorial_color"
        android:paddingVertical="@dimen/_5sdp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@id/tvOk"
        app:layout_constraintTop_toBottomOf="@id/iCustomTime"/>



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvOk"
        style="@style/TutorialMidTitle"
        android:layout_width="wrap_content"
        android:text="@string/okay"
        android:textColor="@color/tutorial_color"
        android:paddingVertical="@dimen/_5sdp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iCustomTime"/>

</androidx.constraintlayout.widget.ConstraintLayout>